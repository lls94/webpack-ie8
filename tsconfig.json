{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true
    },
    "paths":{
        "@/*":["./src/*"],
        "@public/*": ["./src/public/*"],
        "@pages/*": ["./src/pages/*"],
        "@images/*": ["./src/images/*"]
    },
    "include": [
        "./typings",
        "./src/views/**/*"
    ],
    "exclude": [
        "node_modules",
        "webpack"
    ]
}